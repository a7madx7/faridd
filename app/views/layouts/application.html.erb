<!DOCTYPE html>
<html>
  <head>
    <title><%= controller_name.capitalize %> <%= action_name.capitalize %></title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!--<link rel="stylesheet" href="http://anijs.github.io/lib/anicollection/anicollection.css">-->
  </head>

  <body>
   <div class="pusher">
     <%= render 'layouts/menu' %>
     <%= render 'layouts/flash' %>
     <%= render 'layouts/loader_dimmer' %>
     <!--Moved yield to the layouts/menu -->
   </div>
   <%= render 'layouts/sidebar' %>
  </body>

<% unless devise_controller? %>
    <footer class="centered">
      <p class="ui message">In the memory of <a href="https://facebook.com/mfaridd">Mohamed Farid Awd</a> By his friend
        <a href="https://facebook.com/a7madx7">Dr. Ahmad Hamdi Emara</a></p>
    </footer>
<% end %>
</html>


<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<% if Rails.env.production? %>
    <%= javascript_include_tag('ani') %>
    <%= javascript_include_tag('anijs-scrollreveal') %>
<% end %>
<%= javascript_include_tag('alertify.min') %>

<%= debug(params) %>
