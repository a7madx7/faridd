<%- if notice %>
    <div class="ui positive message">
      <%= semantic_icon('close') %>
      <div class="header">Please notice</div>
      <p><%= notice %></p>
    </div>
<% end %>
<%- if alert %>
    <div class="ui negative message">
      <%= semantic_icon('close') %>
      <div class="header">Please notice</div>
      <p><%= alert %></p>
    </div>
<% end %>