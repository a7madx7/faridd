<br><br>
<div class="ui centered middle aligned container">
    <div class="ui three column middle aligned very relaxed stackable grid">
      <div class="column">
        <h2 class="ui center aligned dividing header">Registration</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui form' }) do |f| %>
             <div class="field">
               <%= f.label 'Email' %>
               <div class="ui left icon input">
                 <%= f.email_field :email, autofocus: true %>
                 <i class="user icon"></i>
               </div>
             </div>
            <div class="field">
              <%= f.label 'Password' %>
              <div class="ui left icon input">
                <%= f.password_field :password, autocomplete: "off" %>
                <i class="lock icon"></i>
              </div>
            </div>
            <div class="field">
              <%= f.submit "Log in", class: 'ui blue submit button' %>
            </div>
            <% if devise_mapping.rememberable? -%>
                <div class="ui segment">
                  <div class="inline field">
                    <div class="ui toggle checkbox">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                </div>
            <% end -%>
        <% end %>
      </div>
     <div class="column">
       <div class="ui vertical divider">
         Or
       </div>
     </div>
      <div class="column">
        <%= render 'devise/shared/social' %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>

