<h2 class="ui huge centered dividing header">Sign up</h2>

<div class="ui centered container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form green piled segment' }) do |f| %>
     <%- if resource.errors.any? %>
       <div class="row">
         <div class="ui red inverted segment">
           <%= devise_error_messages! %>
         </div>
       </div>
      <% end %>
      <div class="row">
        <div class="two fields">
          <div class="field">
            <%= f.label 'Email' %>
            <div class="ui left icon input">
              <%= f.email_field :email, autofocus: true %>
              <i class="inbox icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label 'Username' %>
            <div class="ui left icon input">
              <%= f.text_field :username %>
              <i class="user icon"></i>
            </div>
          </div>
        </div>

        <div class="two fields">
          <div class="field">
            <%= f.label 'First name' %>
            <div class="ui left icon input">
              <%= f.text_field :first_name %>
              <i class="pencil icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label 'Last name' %>
            <div class="ui left icon input">
              <%= f.text_field :last_name %>
              <i class="pencil icon"></i>
            </div>
          </div>
        </div>

        <div class="two fields">
          <div class="field">
            <%= f.label 'Country' %>
            <div class="ui fluid search selection dropdown" id="country_selection">
              <input type="hidden" name="user[country]">
              <i class="dropdown icon"></i>
              <div class="default text">Select Country</div>
              <div class="menu">
                <% Country.all.each do |c| %>
                    <div class="item" data-value="<%= c.code.downcase %>"><i class="<%= c.code.downcase %> flag"></i><%= c.name %></div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="field">
            <%= f.label 'Profession' %>
            <div class="ui fluid search selection dropdown" id="profession_selection">
              <input type="hidden" name="user[profession]">
              <i class="dropdown icon"></i>
              <div class="default text">Select Profession</div>
              <div class="menu">
                <% %w{Student Pharmacist Physician Dentist Company}.each do |c| %>
                    <div class="item" data-value="<%= c.downcase %>"><i class="<%= if c.downcase == 'company'
                                                                                     'users'
                                                                                   else
                                                                                     c.downcase == 'student' ? 'student' : 'doctor'
                                                                                   end %> icon"></i><%= c.capitalize %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="one field">
          <div class="field">
            <%= f.label 'Gender' %>
            <div class="ui fluid search selection dropdown" id="gender_selection">
              <input type="hidden" name="user[gender]">
              <i class="dropdown icon"></i>
              <div class="default text">Select Your Gender</div>
              <div class="menu">
                <% %w{Male Female}.each do |c| %>
                    <div class="item" data-value="<%= c.downcase %>"><i class="<%= c.downcase %> icon"></i><%= c.capitalize %></div>
                <% end %>
              </div>
            </div>
            </div>
        </div>
        <div class="two fields">
          <div class="field">
            <%= f.label 'Password' %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <div class="ui left icon input">
              <%= f.password_field :password, autocomplete: "off" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <div class="ui left icon input">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
              <i class="lock icon"></i>
            </div>
          </div>
        </div>

        <div class="centered field">
            <button class="ui animated green bordered fade button" tabindex="0" id="user_submit" name="commit" type="submit" >
              <div class="visible content">Sign up now!</div>
              <div class="hidden content">
                <%= semantic_icon(:send) %>
              </div>
            </button>
      </div>
      </div>
     <div class="row">
       <div class="ui horizontal divider">Or sign up with</div>
     </div>
     <div class="row">
       <%= render 'devise/shared/social' %>
     </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>