<div class="centered" id="welcome" data-anijs="if: click, on: #welcome, do: swing animated">
  <br>
  <h1 id="welcome_header">Welcome to faridd.com</h1>
  <p class="description" id="welcome_description" data-anijs="do: bounceInRight">The most intelligent drug api on planet earth</p>
</div>

<br><br>
<div class="main feed">
  <div class="ui four brown centered statistics">
    <div class="statistic">
      <div class="value">
        <%= User.all.count %>
        <i class="user icon"></i>
      </div>
      <div class="label">
        Users
      </div>
    </div>

    <div class="statistic">
      <div class="value">
        <%= Drug.all.count %>
        <i class="registered icon"></i>
      </div>
      <div class="label">
        Drugs
      </div>
    </div>
    <div class="statistic">
      <div class="value">
        <%= Generic.all.count %>
        <i class="lab icon"></i>
      </div>
      <div class="label">
        Generics
      </div>
    </div>
    <div class="statistic">
      <div class="value">
        <%= Article.all.count %>
        <i class="edit icon"></i>
      </div>
      <div class="label">
        Articles
      </div>
    </div>
  </div>
  <br><br>
  <div class="ui centered cards">
    <%- if @users %>
        <%- @users.each do |user| %>
            <div class="card">
              <div class="content">
                <img class="right floated mini ui circular image" src="<%= user.picture %>">
                <div class="header">
                  <%= user.full_name %>
                </div>
                <div class="meta">
                  Friends of Veronika
                </div>
                <div class="description">
                  Elliot requested permission to view your contact details
                </div>
              </div>
              <div class="extra content">
                <div class="ui two buttons">
                  <div class="ui basic green button">Add friend</div>
                  <div class="ui basic red button">Decline</div>
                </div>
              </div>
            </div>
        <%- end %>
    <% end %>
  </div>
</div>